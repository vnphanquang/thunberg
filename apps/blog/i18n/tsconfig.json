{
  "extends": "../../../common/config/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "$generated/*": ["./src/generated/*"]
    },
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "declarationDir": "./dist/types/",
    "noEmit": false,
    "declaration": true
  }
}
