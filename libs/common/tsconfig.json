{
  "extends": "../../common/config/tsconfig.base.json",
  "include": [
    "webpack.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {},
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./build/types/",
    "outDir": "./build/"
  }
}
